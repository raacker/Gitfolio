    <header>
      <div class="header-content">
        <div class="header-content-inner">
          <img id="logo" src="/img/logo.png">
          <hr>
          <p>Change your Biography</p>
        </div>
      </div>
    </header>
    <section class="bg-primary" id="biography" action="api/skillSets" method="post">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-lg-offset-2 text-center">
            <h2 class="section-heading">Biography</h2>
            <hr class="light">
            <form class="biography-edit" action="api/userProfiles/edit" method="post">
              <label for="bio">Biography :</label>
              <textarea name="userBio" class="form-control" rows="5" id="bio"></textarea>
              <div id="linkedin">
                <h2 class="section-heading">Linked</h2>
                <hr class="light">
                <label for="url">LinkedIn</label>
                <input name="userLinkedInLink" id="url" type="string" class="form-control" size="60" placeholder="input LinkedIn link" required>
              </div>
              <input hidden="true" name="userID" value=<%= userID %>>
              <div class="forbioapply">
                <button type="submit" class="btn btn-default btn-xl sr-button" value="SUBMIT">Apply</button>
              </div>
            </form>
            <form class="" action="api/skillSets/add" method="post">
              <label for="skillset">Skillset :</label>
              <hr class="light">
              <div id="skillset">
                <div class="checkbox">
                  <label>Skill Name</label>
                  <input name="skillName" id="url" type="string" class="form-control" size="60" placeholder="input skill name" required>
                  <label for="sel1">level :</label>
                  <select name="skillLevel" class="form-control" id="sel1">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                  </select>
                  <select name="skillType" class="form-control" id="skill_type">
                    <option value="lan" default>Language</option>
                    <option value="frame">Framework</option>
                    <option value="else">Else</option>
                  </select>
                  <input hidden="true" name="userID" value=<%= userID %>>
                </div>
              </div>
              <div class="forbioapply">
                <button type="submit" class="btn btn-default btn-xl sr-button" value="SUBMIT">Apply</button>
              </div>
            </form>
            <form class="" action="api/organizations" method="post">
              <div id="organization">
                <h2 class="section-heading">Organiztion</h2>
                <hr class="light">
                <label for="url">Organization</label>
                <input name="name" id="url" type="string" class="form-control" size="60" placeholder="input organization name" required>
                <div class="forbioapply">
                  <button type="submit" class="btn btn-default btn-xl sr-button" value="SUBMIT">Apply</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>
    <section id="repository">
      <form class="" action="api/repositories/add" method="post">
        <div class="container">
          <div class="row">
            <div class="col-lg-8 col-lg-offset-2 text-center">
              <h2 class="section-heading">Repository</h2>
              <hr class="light">
              <label>Current your repositories</label>
              <% for(var i = 0; i < repositories.length; i++){ %>
              <div class="description">
                <%= repositories[i].repoName %>
              </div>
              <% }%>
            <div></br></div>
              <label for="url">URL :</label>
              <input name="repoURL" id="url" type="string" class="form-control" size="60" placeholder="input repository link" required>
              <label for="description">Description :</label>
              <input hidden="true" name="userID" value=<%= userID %>>
              <textarea name="description" class="form-control" rows="5" id="description"></textarea>
              <button type="submit" class="btn btn-default btn-xl sr-button" value="SUBMIT">Apply</button>
            </div>
          </div>
        </div>
      </form>
    </section>

