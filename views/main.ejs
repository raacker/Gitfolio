<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Gitfolio</title>

  <!-- Bootstrap Core CSS -->
  <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom Fonts -->
  <link href="/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
  <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>

  <!-- Plugin CSS -->
  <link href="/vendor/magnific-popup/magnific-popup.css" rel="stylesheet">

  <!-- Theme CSS -->
  <link href="/css/main.min.css" rel="stylesheet">

  <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
  <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
  <![endif]-->

</head>

<body id="page-top">

<nav id="mainNav" class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span> Menu <i class="fa fa-bars"></i>
      </button>
      <a class="navbar-brand page-scroll" href="#page-top">Gitfolio</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <li>
          <a class="page-scroll" href="#about">About</a>
        </li>
        <li>
          <a class="page-scroll" href="#services">Skillset</a>
        </li>
        <li>
          <a class="page-scroll" href="#portfolio">Activity</a>
        </li>
        <li>
          <a class="page-scroll" href="/search">Search</a>
        </li>
        <li>
          <a class="page-scroll" href="/preference">Setting</a>
        </li>
        <li>
          <a class="page-scroll" href="/logout">Logout</a>
        </li>
      </ul>
    </div>
    <!-- /.navbar-collapse -->
  </div>
  <!-- /.container-fluid -->
</nav>

<header id="myCarousel" class="carousel slide">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <% if(repositories.length > 0){ %>
      <div class="item active">
        <a href=<%= repositories[0].repoURL %>>
          <div class="fill" style="background-image:url('/img/repositoryback1.png');"></div>
          <div class="carousel-caption">
            <div class="repoName">
              <h1><%= repositories[0].repoName %></h1>
            </div>
            <div class="description">
              <h2><%= repositories[0].description %></h2>
            </div>
          </div>
        </a>
      </div>
      <% } %>
      <% for(var i = 1; i < repositories.length; i++){ %>
        <div class="item">
          <a href=<%= repositories[i].repoURL %>>
          <div class="fill" style="background-image:url('/img/repositoryback2.png');"></div>
          <div class="carousel-caption">
            <div class="repoName">
              <h1><%= repositories[i].repoName %></h1>
            </div>
            <div class="description">
              <h2><%= repositories[i].description %></h2>
            </div>
          </div>
        </a>
        </div>
      <% } %>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="icon-prev"></span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="icon-next"></span>
  </a>
</header>

<section class="bg-primary" id="about">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 text-center">
        <h2 class="section-heading">Biography</h2>
        <hr class="light">
        <p class="text-faded"><%= userBio %></p>
        <a class="page-scroll btn btn-default btn-xl sr-button" href=<%= userLinkedInLink %>>Go to LinkedIn</a>
      </div>
    </div>
  </div>
</section>

<section id="services">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">My SkillSet</h2>
        <hr class="primary">
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <% for(var i = 0; i < skillSets.length; i++){ %>
        <div class="col-lg-3 col-md-6 text-center">
          <div class="service-box">
            <h3><%= skillSets[i].skillName %></h3>
            <% if(skillSets[i].skillType == 'lan') {%>
            <i class="fa fa-4x fa-pencil text-primary sr-icons"></i>
            <% } else if(skillSets[i].skillType == 'frame') {%>
            <i class="fa fa-4x fa-paper-plane text-primary sr-icons"></i>
            <% } else { %>
            <i class="fa fa-4x fa-quote-left text-primary sr-icons"></i>
            <% } %>
            </div>
          </div>
        </div>
        <% } %>
    </div>
  </div>
</section>

<section class="no-padding" id="portfolio">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">Activity</h2>
        <hr class="primary">
      </div>
    </div>
  </div>
  <div class="container-fluid">
    <div class="row no-gutter">
      <% for(var i = 0; i < activityCards.length; i++){ %>
        <div class="col-lg-4 col-sm-6">
          <a class="portfolio-box" href=<%= activityCards[i].activityURL %>>
            <% if(activityCards[i].cardType == 'issues') {%>
            <img src="/img/issue.png" class="img-responsive" alt="">
            <% } else if(activityCards[i].cardType == 'pull') {%>
            <img src="/img/pull.png" class="img-responsive" alt="">
            <% } else { %>
            <img src="/img/commit.png" class="img-responsive" alt="">
            <% } %>
            <div class="portfolio-box-caption">
              <div class="portfolio-box-caption-content">
                <div class="project-name">
                  <%= activityCards[i].activityName %>
                </div>
                <div class="project-description">
                  <%= activityCards[i].description %>
                </div>
                <div class="project-category text-faded">
                  <%= activityCards[i].cardType %>
                </div>
                <div class="project-importance">
                  <%= activityCards[i].importanceLevel %>
                </div>
              </div>
            </div>
          </a>
        </div>
  		<% } %>
    </div>
    </div>
      <a data-toggle="modal" href="#cardAdd" class="btn btn-primary btn-small" style="height:32px">add</a>

  </div>
</section>

<!-- jQuery -->
<script src="/vendor/jquery/jquery.min.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="/vendor/bootstrap/js/bootstrap.min.js"></script>

<!-- Plugin JavaScript -->
<script src="http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
<script src="/vendor/scrollreveal/scrollreveal.min.js"></script>
<script src="/vendor/magnific-popup/jquery.magnific-popup.min.js"></script>

<!-- Theme JavaScript -->
<script src="/js/main.min.js"></script>
<script>
    $('.carousel').carousel({
        interval: 5000 //changes the speed
    })
</script>

<!-- ActivityCardAdd Modal -->
<div class="modal fade" id="cardAdd">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h4 class="modal-title">Add Your Activity</h4>
      </div>

      <form action="api/activityCards" method="post">
        <div class="modal-body">
          <fieldset>
            <div class="form-group">
              <label>Activity URL</label>
              <input type="text" class="form-control" name="activityURL" id="activityURL" placeholder="Activity URL" required>
            </div>
            <div class="form-group">
              <label>Activity Description</label>
              <input type="text" class="form-control" name="description" id="description" placeholder="Descripton" required>
            </div>

            <div class="form-group">
              <div class="col-sm-10">
                <div class="select">
                  <label>Complexity Level</label>
                  <select class="" name="complexityLevel">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                  </select>
                </div>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-10">
                <div class="select">
                  <label>Importance Level</label>
                  <select class="" name="importanceLevel">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="form-group">
              <input hidden="true" name="userID" value=<%= userID %>>
              <input hidden="true" name="login" value=<%= login %>>
            </div>
          </fieldset>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary" value="SUBMIT">Add</button>
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </form>
    </div>
  </div>

</div>
</body>

</html>
